<script src="/assets/js/validator.js"></script>
<script src="/assets/vendors/charts/echarts.js"></script>
<script src="/assets/vendors/charts/echarts.min.js"></script>
<script src="/assets/js/charts.js"></script>
<script src="/assets/vendors/charts/theme/shine.js"></script>
<script src="/assets/vendors/charts/theme/vintage.js"></script>
